                    scrollTop: $("#fridge").offset().top - 20
                }, 500);
            });
            $("#compilerLink").click(function() {
                $('html, body').animate({
                    scrollTop: $("#compiler").offset().top
                }, 500);
            });
        } else {
            $("#knearuLink").click(function() {
                $('html, body').animate({
                    scrollTop: $("#knearu").offset().top - 100
                }, 500);
            });
            $("#dayleeLink").click(function() {
                $('html, body').animate({
                    scrollTop: $("#daylee").offset().top - 100
                }, 500);
            });
            $("#fridgeLink").click(function() {
                $('html, body').animate({
