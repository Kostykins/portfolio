<script>
    $(document).ready(function () {
        $(window).on('beforeunload', function(){
            $(window).scrollTop(0);
        });
        if((/iPhone|iPod|iPad|Android|BlackBerry/).test(navigator.userAgent)){
            $("#knearuLink").click(function() {
                $('html, body').animate({
                    scrollTop: $("#knearu").offset().top - 20
                }, 500);
            });
            $("#dayleeLink").click(function() {
                $('html, body').animate({
                    scrollTop: $("#daylee").offset().top - 20
                }, 500);
            });
            $("#fridgeLink").click(function() {
